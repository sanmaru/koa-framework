{
  "name": "koa-framework",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com-san:sanmaru/koa-framework.git",
  "author": "sanmaru <moni.sanmaru@gmail.com>",
  "license": "MIT",
  "scripts": {
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "tslint": "tslint 'src/**/*.ts'",
    "lint": "yarn tslint && yarn eslint",
    "test": "jest --collectCoverage --forceExit",
    "dev": "ts-node src/server.ts",
    "start": "tsc && node dist/server.js",
    "build": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/dist/**/*.js",
      "!<rootDir>/src/server.ts",
      "!<rootDir>/src/configuration/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50
      }
    }
  },
  "dependencies": {
    "@babel/plugin-transform-regenerator": "^7.12.1",
    "@koa/cors": "^3.1.0",
    "@types/jest": "^26.0.20",
    "@types/koa-router": "^7.4.1",
    "dotenv": "^8.2.0",
    "koa": "^2.13.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@koa/router": "^10.0.0",
    "@types/koa": "^2.11.6",
    "@types/koa-logger": "^3.1.1",
    "@types/koa__cors": "^3.0.2",
    "@types/koa__router": "^8.0.4",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "axios": "^0.21.1",
    "babel-cli": "^6.26.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-typescript": "^3.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-alloy": "^0.2.1",
    "typescript": "^4.1.3"
  }
}
