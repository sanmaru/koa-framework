{
    "env": {
        "browser": true,
        "es2021": true,
        "es6":true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/eslint-recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "semi": "error"
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "js": true,
            "ts": true,
            "tsx": true
        }
    },
    "plugins": [
        "@typescript-eslint"
    ]
}
